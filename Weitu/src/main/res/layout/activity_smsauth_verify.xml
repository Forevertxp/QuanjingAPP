<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context="com.quanjing.weitu.app.ui.user.MWTSMSAuthVerifyActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/ImageView"
        android:visibility="visible"
        android:scaleType="centerCrop"
        android:src="@drawable/auth_bg_4"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:paddingTop="32dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_round_semi_transparent_gray">

            <TextView
                android:id="@+id/CellphoneTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/DarkTextColor"
                android:text="您的手机号：13800138000"
                android:padding="12dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/BlackTextColor"/>

            <EditText
                android:id="@+id/EditText"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_weight="1.0"
                android:background="@android:color/white"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:singleLine="true"
                android:textSize="20sp"
                android:hint="6位短信验证码"
                android:inputType="number"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/BlackTextColor"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/ResendButton"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1.0"
                    style="@style/BlueGlassButton"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="6dp"
                    android:text="60秒后重发"/>

                <Button
                    android:id="@+id/ActionButton"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1.0"
                    style="@style/BlueGlassButton"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="12dp"
                    android:text="完成"/>

            </LinearLayout>

        </LinearLayout>

    </FrameLayout>

</RelativeLayout>
