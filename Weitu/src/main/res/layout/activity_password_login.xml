<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context="com.quanjing.weitu.app.ui.user.MWTPasswordLoginActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/ImageView"
        android:visibility="visible"
        android:scaleType="centerCrop"
        android:src="@drawable/auth_bg_4"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:paddingTop="25dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_round_semi_transparent_gray">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/DarkTextColor"
                android:text="请输入您的全景网用户名和密码："
                android:padding="12dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/BlackTextColor"/>

            <EditText
                android:id="@+id/UsernameEditText"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_weight="1.0"
                android:background="@android:color/white"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:singleLine="true"
                android:textSize="20sp"
                android:hint="全景网用户名"
                android:inputType="text"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/BlackTextColor"/>


            <EditText
                android:id="@+id/PasswordEditText"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_weight="1.0"
                android:background="@android:color/white"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:singleLine="true"
                android:textSize="20sp"
                android:hint="全景网密码"
                android:inputType="textPassword"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/BlackTextColor"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/ActionButton"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1.0"
                    style="@style/BlueGlassButton"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:text="登录"/>

            </LinearLayout>

        </LinearLayout>

    </FrameLayout>

</RelativeLayout>
