<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.quanjing.weitu.app.ui.user.MWTSMSAuthRequestActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/ImageView"
        android:visibility="visible"
        android:scaleType="centerCrop"
        android:src="@drawable/auth_bg_4"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:paddingTop="32dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_round_semi_transparent_gray">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/DarkTextColor"
                android:text="我们将向您的手机发送6位验证码，请确保您的手机工作正常。"
                android:padding="12dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/BlackTextColor"/>

            <EditText
                android:id="@+id/EditText"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_weight="1.0"
                android:background="@android:color/white"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:singleLine="true"
                android:textSize="20sp"
                android:hint="您的手机号码"
                android:inputType="phone"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/BlackTextColor"/>

            <TextView
                android:id="@+id/LicenseTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/DarkTextColor"
                android:text="点击获取验证码代表您同意《全景服务条款》"
                android:paddingTop="12dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"/>

            <Button
                android:id="@+id/ActionButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/BlueGlassButton"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:text="获取验证码"/>

        </LinearLayout>

    </FrameLayout>

</RelativeLayout>
